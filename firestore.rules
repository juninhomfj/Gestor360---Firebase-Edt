rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getProfile() {
      return get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data;
    }

    function profileExists() {
      return exists(/databases/$(database)/documents/profiles/$(request.auth.uid));
    }

    function isActive() {
      return isSignedIn() && profileExists() && getProfile().isActive == true;
    }

    function isAdmin() {
      return isSignedIn() && profileExists() && 
        (getProfile().role == 'ADMIN' || getProfile().role == 'DEV');
    }

    function isOwner() {
      return resource.data.userId == request.auth.uid || request.resource.data.userId == request.auth.uid;
    }

    // Aliases para compatibilidade com o patch solicitado
    function isAuth() { return isSignedIn(); }
    function isDEV() { return isSignedIn() && profileExists() && getProfile().role == 'DEV'; }
    function myUid() { return request.auth.uid; }
    function hasModule(mod) { return getProfile().permissions[mod] == true; }

    // Bloqueio Global de Deleção Física (Sobrescrito por regras específicas)
    match /{path=**} {
      allow delete: if false;
    }

    match /profiles/{uid} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.auth.uid == uid || isAdmin());
    }

    match /sales/{id} {

      // READ (USER: apenas próprios com módulo "sales"; DEV: lê tudo)
      allow read: if isAuth() && isActive() && (
        (hasModule("sales") && resource.data.userId == myUid()) ||
        isDEV()
      );

      // CREATE (NÃO ALTERAR: continua estritamente "cada um cria o seu")
      allow create: if isAuth() && isActive() && hasModule("sales")
        && request.resource.data.userId == myUid();

      // UPDATE (USER: apenas próprios com módulo "sales"; DEV: atualiza tudo)
      allow update: if isAuth() && isActive() && (
        (hasModule("sales") && resource.data.userId == myUid()) ||
        isDEV()
      );

      // DELETE (somente DEV)
      allow delete: if isAuth() && isActive() && isDEV();
    }
    
    match /transactions/{id} { allow read, write: if isActive() && (isOwner() || isAdmin()); }
    match /accounts/{id} { allow read, write: if isActive() && (isOwner() || isAdmin()); }
    match /cards/{id} { allow read, write: if isActive() && (isOwner() || isAdmin()); }
    match /categories/{id} { allow read, write: if isActive() && (isOwner() || isAdmin()); }
    match /goals/{id} { allow read, write: if isActive() && (isOwner() || isAdmin()); }
    match /receivables/{id} { allow read, write: if isActive() && (isOwner() || isAdmin()); }
    match /clients/{id} { allow read, write: if isActive() && (isOwner() || isAdmin()); }

    match /internal_messages/{msgId} {
      allow create: if isActive();
      allow read: if isActive() && (
        resource.data.recipientId == request.auth.uid || 
        resource.data.senderId == request.auth.uid ||
        resource.data.recipientId == "BROADCAST" ||
        isAdmin()
      );
      allow update: if isActive() && (isOwner() || isAdmin());
    }

    match /commissions_basic/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /commissions_natal/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /config/{configId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /audit_log/{logId} {
      allow create: if isSignedIn();
      allow read: if isAdmin();
    }
  }
}