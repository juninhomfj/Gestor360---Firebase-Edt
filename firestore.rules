rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getProfile() {
      return get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data;
    }

    function profileExists() {
      return exists(/databases/$(database)/documents/profiles/$(request.auth.uid));
    }

    function isActive() {
      return isSignedIn() && profileExists() && getProfile().isActive == true;
    }

    function isAdmin() {
      return isSignedIn() && profileExists() && 
        (getProfile().role == 'ADMIN' || getProfile().role == 'DEV');
    }

    function isOwner() {
      return resource.data.userId == request.auth.uid || request.resource.data.userId == request.auth.uid;
    }

    function isAuth() { return isSignedIn(); }
    function isDEV() { return isSignedIn() && profileExists() && getProfile().role == 'DEV'; }
    function myUid() { return request.auth.uid; }
    function hasModule(mod) { return getProfile().permissions[mod] == true; }

    match /{path=**} {
      allow delete: if false;
    }

    match /profiles/{uid} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.auth.uid == uid || isAdmin());
    }

    // --- FISCAL 360 RULES ---

    match /companies/{id} {
      allow read: if isAuth() && isActive() && (resource.data.userId == myUid() || isDEV());
      allow create: if isAuth() && isActive() && request.resource.data.userId == myUid();
      allow update: if isAuth() && isActive() && resource.data.userId == myUid();
    }

    match /fiscal_periods/{id} {
      allow read: if isAuth() && isActive() && (resource.data.userId == myUid() || isDEV());
      allow create: if isAuth() && isActive() && hasModule("fiscal") && request.resource.data.userId == myUid();
      allow update: if isAuth() && isActive() && hasModule("fiscal") && resource.data.userId == myUid();
    }

    match /tax_estimates/{id} {

      // READ: USER lê somente as próprias estimativas com módulo fiscal; DEV lê tudo
      allow read: if isAuth() && isActive() && (
        (hasModule("fiscal") && resource.data.userId == myUid()) ||
        isDEV()
      );

      // CREATE: USER pode gerar a própria estimativa (snapshot), mas não editar depois
      // Hardening mínimo (integridade):
      // - userId deve ser o próprio
      // - generatedBy deve ser o próprio
      // - generatedAt deve existir
      // - companyId e periodId devem existir
      // - regimeTributario e rulesVersion devem existir
      // - total e items devem existir
      allow create: if isAuth() && isActive() && (
        isDEV() ||
        (
          hasModule("fiscal") &&
          request.resource.data.userId == myUid() &&
          request.resource.data.generatedBy == myUid() &&
          request.resource.data.generatedAt != null &&
          request.resource.data.companyId != null &&
          request.resource.data.periodId != null &&
          request.resource.data.regimeTributario != null &&
          request.resource.data.rulesVersion != null &&
          request.resource.data.total != null &&
          request.resource.data.items != null
        )
      );

      // UPDATE/DELETE: somente DEV (estimativa é snapshot)
      allow update, delete: if isAuth() && isActive() && isDEV();
    }

    match /tax_rules/{id} {
      allow read: if isAuth();
      allow write: if isDEV();
    }

    match /obligations/{id} {
      allow read: if isAuth() && isActive() && (resource.data.userId == myUid() || isDEV());
      allow create: if isAuth() && isActive() && hasModule("fiscal") && request.resource.data.userId == myUid();
      allow update: if isAuth() && isActive() && hasModule("fiscal") && resource.data.userId == myUid();
      allow delete: if isAuth() && isActive() && (resource.data.userId == myUid() || isDEV());
    }

    match /sales/{id} {
      allow read: if isAuth() && isActive() && ((hasModule("sales") && resource.data.userId == myUid()) || isDEV());
      allow create: if isAuth() && isActive() && hasModule("sales") && request.resource.data.userId == myUid();
      allow update: if isAuth() && isActive() && ((hasModule("sales") && resource.data.userId == myUid()) || isDEV());
      allow delete: if isAuth() && isActive() && isDEV();
    }
    
    match /transactions/{id} {
      allow read: if isAuth() && isActive() && ((hasModule("sales") && resource.data.userId == myUid()) || isDEV());
      allow create: if isAuth() && isActive() && hasModule("sales") && request.resource.data.userId == myUid();
      allow update: if isAuth() && isActive() && ((hasModule("sales") && resource.data.userId == myUid()) || isDEV());
      allow delete: if isAuth() && isActive() && isDEV();
    }
    
    match /accounts/{id} {
      allow read: if isAuth() && isActive() && ((hasModule("sales") && resource.data.userId == myUid()) || isDEV());
      allow create: if isAuth() && isActive() && hasModule("sales") && request.resource.data.userId == myUid();
      allow update: if isAuth() && isActive() && ((hasModule("sales") && resource.data.userId == myUid()) || isDEV());
      allow delete: if isAuth() && isActive() && isDEV();
    }
    
    match /cards/{id} { allow read, write: if isActive() && (isOwner() || isAdmin()); }
    match /categories/{id} { allow read, write: if isActive() && (isOwner() || isAdmin()); }
    match /goals/{id} { allow read, write: if isActive() && (isOwner() || isAdmin()); }

    match /receivables/{id} {
      allow read: if isAuth() && isActive() && ((hasModule("sales") && resource.data.userId == myUid()) || isDEV());
      allow create: if isAuth() && isActive() && hasModule("sales") && request.resource.data.userId == myUid();
      allow update: if isAuth() && isActive() && ((hasModule("sales") && resource.data.userId == myUid()) || isDEV());
      allow delete: if isAuth() && isActive() && isDEV();
    }

    match /clients/{id} {
      allow read: if isAuth() && isActive() && ((hasModule("sales") && resource.data.userId == myUid()) || isDEV());
      allow create: if isAuth() && isActive() && hasModule("sales") && request.resource.data.userId == myUid();
      allow update: if isAuth() && isActive() && ((hasModule("sales") && resource.data.userId == myUid()) || isDEV());
      allow delete: if isAuth() && isActive() && isDEV();
    }

    match /internal_messages/{msgId} {
      allow create: if isActive();
      allow read: if isActive() && (resource.data.recipientId == request.auth.uid || resource.data.senderId == request.auth.uid || resource.data.recipientId == "BROADCAST" || isAdmin());
      allow update: if isActive() && (isOwner() || isAdmin());
    }

    match /commissions_basic/{docId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /commissions_natal/{docId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /config/{configId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /audit_log/{logId} { allow create: if isSignedIn(); allow read: if isAdmin(); }
  }
}