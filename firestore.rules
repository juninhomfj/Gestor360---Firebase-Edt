rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. Mandatory Support Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(res) {
      return isSignedIn() && res.data.userId == request.auth.uid;
    }

    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role in ['ADMIN', 'DEV'];
    }

    // 2. Financial & Private Data (Strict RLS)
    // collections: transactions, cards, goals, challenges, challenge_cells, receivables
    function validatePrivateWrite() {
      return isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    function validatePrivateRead(res) {
      return isSignedIn() && (res.data.userId == request.auth.uid || res.data.isTemplate == true);
    }

    match /transactions/{id} {
      allow read: if validatePrivateRead(resource);
      allow write: if validatePrivateWrite();
    }
    match /cards/{id} {
      allow read: if validatePrivateRead(resource);
      allow write: if validatePrivateWrite();
    }
    match /goals/{id} {
      allow read: if validatePrivateRead(resource);
      allow write: if validatePrivateWrite();
    }
    match /challenges/{id} {
      allow read: if validatePrivateRead(resource);
      allow write: if validatePrivateWrite();
    }
    match /challenge_cells/{id} {
      allow read: if validatePrivateRead(resource);
      allow write: if validatePrivateWrite();
    }
    match /receivables/{id} {
      allow read: if validatePrivateRead(resource);
      allow write: if validatePrivateWrite();
    }

    // 3. Commissions (Global Controlled)
    match /commissions/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // 4. Internal Messages
    match /internal_messages/{msgId} {
      allow read: if isSignedIn() && (
        resource.data.recipientId == request.auth.uid || 
        resource.data.recipientId == "BROADCAST" || 
        isAdmin()
      );
      
      // Only owner can create. BROADCAST messages restricted to admins.
      allow create: if isSignedIn() && 
                    request.resource.data.userId == request.auth.uid && 
                    (request.resource.data.recipientId != "BROADCAST" || isAdmin());
      
      // Only owner can update/delete. BROADCAST restricted to admins.
      allow update, delete: if isAdmin() || (isOwner(resource) && resource.data.recipientId != "BROADCAST");
    }

    // 5. Config/System
    match /config/system {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /config/{configId} {
      allow read, write: if isSignedIn() && (
        configId == "system_" + request.auth.uid || 
        configId == "report_" + request.auth.uid || 
        isAdmin()
      );
    }

    // 6. User Data (Other Collections)
    match /categories/{id} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || resource.data.isTemplate == true);
      allow write: if validatePrivateWrite();
    }

    match /sales/{id} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if validatePrivateWrite();
    }

    match /clients/{id} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if validatePrivateWrite();
    }

    match /profiles/{uid} {
      allow read: if isSignedIn();
      allow write: if (isSignedIn() && request.auth.uid == uid) || isAdmin();
    }

    match /audit_log/{logId} {
      allow create: if isSignedIn();
      allow read: if isAdmin();
    }
  }
}